{
  "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
  "name": "Sentry Sentinel Midnight",
  "author": "Sentry",
  "themes": [
    {
      "name": "Sentinel Midnight",
      "appearance": "dark",
      "style": {
        "background": "#000000",
        "foreground": "#FFFFFF",
        "accent": "#FF70BC",
        "surface": "#0A0A0A",
        "element": {
          "background": "#0A0A0A",
          "hover": "#181225",
          "active": "#241B3C",
          "selected": "#FF70BC60",
          "disabled": "#181225"
        },
        "border": {
          "border": "#181225",
          "focused": "#FF70BC",
          "selected": "#FF70BC",
          "transparent": "#00000000",
          "disabled": "#181225"
        },
        "text": {
          "text": "#FFFFFF",
          "muted": "#A8A8B0",
          "placeholder": "#A8A8B0",
          "disabled": "#A8A8B0",
          "accent": "#FF70BC"
        },
        "editor": {
          "background": "#000000",
          "foreground": "#FFFFFF",
          "gutter": {
            "background": "#000000",
            "border": "#181225"
          },
          "line_number": "#A8A8B0",
          "line_number_active": "#FFFFFF",
          "active_line": {
            "background": "#0A0A0A"
          },
          "wrap_guide": "#181225",
          "guide": {
            "indent_guide": "#181225",
            "indent_guide_active": "#FF70BC50"
          }
        },
        "status_bar": {
          "background": "#0A0A0A",
          "foreground": "#FFFFFF"
        },
        "title_bar": {
          "background": "#0A0A0A",
          "foreground": "#FFFFFF"
        },
        "toolbar": {
          "background": "#0A0A0A",
          "foreground": "#FFFFFF"
        },
        "tab_bar": {
          "background": "#0A0A0A",
          "foreground": "#FFFFFF"
        },
        "tab": {
          "active_background": "#000000",
          "active_foreground": "#FFFFFF",
          "inactive_background": "#0A0A0A",
          "inactive_foreground": "#A8A8B0"
        },
        "panel": {
          "background": "#0A0A0A",
          "foreground": "#FFFFFF"
        },
        "scrollbar": {
          "thumb": {
            "background": "#181225",
            "hover_background": "#FF70BC",
            "border": "#181225"
          }
        },
        "search": {
          "match_background": "#FFCC0080",
          "match_foreground": "#000000"
        },
        "syntax": {
          "comment": "#A8A8B0",
          "keyword": "#B8A5FF",
          "string": "#A5E68A",
          "number": "#FFCC00",
          "boolean": "#FFCC00",
          "function": "#3EA6FF",
          "type": "#FF70BC",
          "constant": "#9E86FF",
          "variable": "#FFFFFF",
          "property": "#FF9FC7",
          "operator": "#FF70BC",
          "punctuation": "#B8B8C8",
          "tag": "#B8A5FF",
          "attribute": "#3EA6FF"
        },
        "terminal": {
          "ansi": {
            "black": "#000000",
            "red": "#FE4144",
            "green": "#A5E68A",
            "yellow": "#FFCC00",
            "blue": "#3EA6FF",
            "magenta": "#FF70BC",
            "cyan": "#0891B2",
            "white": "#FFFFFF",
            "bright_black": "#898294",
            "bright_red": "#FE4144",
            "bright_green": "#A5E68A",
            "bright_yellow": "#FFCC00",
            "bright_blue": "#B8A5FF",
            "bright_magenta": "#FF70BC",
            "bright_cyan": "#67E8F9",
            "bright_white": "#FFFFFF"
          }
        }
      }
    }
  ]
}
